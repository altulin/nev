include ../helpers/data/location.pug

section.location#location(name="location")
	.locaton__wrap
		figure.location__figure
			+img-retina('location', 'png', 'location', 'location__img', 1920, 1452, 768)

	.location__logo.location-logo
		//- a.location-logo__link("/")
		//- 	+svg('logo')
		figure.location-logo__figure

	each item,i in locationlist
		.location__flag.location-flag(class=`location-flag--${i+1}`)
			h3.location-flag__title(class=`location-flag__title--${i+1}` class=item.color && 'location-flag__title--color')= item.title
			.location-flag__vertical
				.location-flag__line(class=`location-flag__line--${i+1}`)
				.location-flag__circle
