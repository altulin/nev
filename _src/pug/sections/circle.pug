section.circle
	h2.title.title--lg.title--gray.circle__title
		span в кругу
		span единомышленников
		span подальше от суеты

	.circle__slider.swiper
		.swiper-wrapper
			each item in ['','','','','','']
				.swiper-slide.circle__slide
					figure.circle__figure
						+img-retina('circle', 'jpg', 'circle', 'circle__img', '1647', '970')

		.circle__control.tabs-block__control
			button.circle__btn.control.control--prev(type='button' class=`circle__btn--prev`)
				+svg('arr-top')
			button.circle__btn.control.control--next(type='button' class=`circle__btn--next`)
				+svg('arr-top')

		.circle__cover.circle-cover
			.circle-cover__block.circle-cover__block--sm
			.circle-cover__block.circle-cover__block--center
			.circle-cover__block.circle-cover__block--sm

