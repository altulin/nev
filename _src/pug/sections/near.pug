include ../helpers/data/near.pug

section.near

	h2.title.title--lg.near__title.near-title.near-title--desk(data-splitting) всерядом
	h2.title.title--lg.near__title.near-title.near-title--phone(data-splitting) все рядом


	.near__inner#near
		.near__map.near-map
			//- .near-map__inner
			.near-map__map(id='map' )

		.near__content.near-content
			h3.near-content__subtitle РАСПОЛОЖЕНИЕ
			.near-content__mark
				i
				span.near-content__addr
					span Ленинградская область,
					span гп. Дубровка, ул.&nbsp;Невская

			ul.near-content__list
				each item,i in near
					li.near-content__item.near-item
						.near-item__inner
							span.near-item__time= item.time
							span.near-item__min мин
							p.near-item__text
								each el,i in item.text
									if item.last


											if i===2
												span.item-last
													span= el
													span.item-last__text (Финлянский&nbsp;вокзал)
											else
												span= el


									else
										span= el



							//- if item.span
								span.near-item__station= item.span



						.near-item__indication.near-indication(class=`near-indication--${i+1}`)
							.near-indication__line(class=`near-indication__line--${i}`)
							.near-indication__color
