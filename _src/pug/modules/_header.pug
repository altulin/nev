include ../helpers/data/header.pug

header.header#header(class=plan===true?'header--plan':"" )
	.header__inner(class=plan===true?'header__inner--plan':"" )
		if !choose
			hr.header__line

		.header__left.header-left(class=`${choose ? 'header-left--choose':''}`)

			button.header-left__btn.menu-icon.js-header(type="button")
				.menu-icon__inner
					span.menu-icon__line.menu-icon__line--up
					span.menu-icon__line.menu-icon__line--down


		.header__middle.header-middle(class=`${choose ? 'header-middle--choose':''}`)


			if !choose
				hr.header__line-middle.header__line-middle--left
				hr.header__line-middle.header__line-middle--right

				a.header-middle__logo.js-header(href="/index.html")
					+svg('logo')

				if chema
					a.header-middle__spec.header-middle--chema(href="") выбор на схеме

				if param
					a.header-middle__spec.header-middle--param(href="") выбор по секциям

				a.header-middle__choose.js-anchor(href="#choose" data-anchor="#choose" ) выбрать квартиру

				a.header-middle__tel.js-header(href="tel:+78124435659") +7 (812) 443-56-59


		.header__right.header-right(class=`${choose ? 'header-right--choose':''}`)
			if !choose
				a.header-right__mail.js-header(href="mailto:sales@lenoblstroy47.ru")
					+svg('mail')
				a.header-right__camera.camera.js-header(href="#" target="_blank")
					.camera__pulse
					+svg('camera')

			if choose
				a.header-right__choose.header-choose(href="#")
					+svg('choose')

					p.header-choose__text
						span выбрать по
						span параметрам



	.header__menu.menu.scroll
		.menu__inner
			.menu__content.menu-contetnt
				.menu-contetnt__wrap
					nav.menu-contetnt__nav.menu-nav
						ul.menu-nav__list
							each item in header_nav
								if !item.accordion
									li.menu-nav__item
										a.menu-nav__link(href=`${item.href}` class=item.anchor && 'js-anchor' target=item.anchor ? null:'_blank' data-anchor=item.anchor && `${item.href}`)= item.label

								else
									li.menu-nav__item.menu-nav__item--acc.js-accordion
										.ac.accordion
											p.ac-header.accordion__header
												button.ac-trigger.menu-nav__link.accordion__btn(type="button")
													span= item.label
													+svg('acc')

											ul.contetnt-point__list.contetnt-point__list--ph.ac-panel.accordion__panel
												each item in header_point
													li.contetnt-point__item.ac-text.accordion__text
														a.contetnt-point__link(href=`${item.href}` class=item.anchor && 'js-anchor' target=item.anchor ? null:'_blank')= item.label





					.menu-contetnt__point.contetnt-point
						ul.contetnt-point__list.contetnt-point__list--dt
							each item in header_point
								li.contetnt-point__item
									a.contetnt-point__link(href=`${item.href}` class=item.anchor && 'js-anchor' target=item.anchor ? null:'_blank')= item.label

						a.contetnt-point__choose.js-anchor(href="#choose" data-anchor="#choose" ) выбрать  квартиру

			figure.menu__figure
				+img-retina('menu', 'jpg', 'menu', 'menu__img', '740', '970')
